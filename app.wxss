/**app.wxss**/
.ss-sticky {
  position: sticky;
  top: 0;
}

.ss-focus:active{
  background: #FAFAFA;
}

.hei-p100 {
  height: 100%;
}

.bg-bg {
  background: #f4f5f6;
}

.size10 {
  font-size: 20rpx;
}
.size14 {
  font-size: 28rpx;
}
.size16 {
  font-size: 32rpx;
}
.size18 {
  font-size: 36rpx;
}
.fw-bold {
  font-weight: bold;
}

.ptb-20-r {
  padding: 20rpx 0;
}

.bg-fff{
  background: #fff;
}

.ml-20-r {
  margin-left: 20rpx;
}
.ml-40-r {
  margin-left: 40rpx;
}

.bb-default {
  border-bottom: 1rpx solid #f1efef;
}

.flex-row-start-center {
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
}

.flex-1 {
  flex: 1;
}

.pic-80-r {
  width: 80rpx;
  height: 80rpx;
}
.pic-80-r image {
  width: 100%;
  height: 100%;
}

.pic-60-r {
  width: 60rpx;
  height: 60rpx;
}
.pic-60-r image {
  width: 100%;
  height: 100%;
}

.color-active {
  color: #333;
}

.lhei-60-r {
  line-height: 60rpx;
}

.pt-20-r {
  padding-top: 20rpx;
}

.plr-default-r {
  padding: 0 20rpx;
}
.pl-default-r {
  padding-left: 20rpx;
}

.none {
  display: none;
}


.boxer {
  background: #fff;
  color: #666;
  font-size: 28rpx;
  height: 100vh;
  width: 100%;
  overflow: hidden;
}

.selectionMenus {
  text-align: center;
  color: #2773f5;
  width: 44rpx;
  line-height: 44rpx;
  margin: 0 10rpx;
}

.selectionMenus >ui-item >.item.active {
  background: #2773f5;
  border-radius: 100%;
  color: #fff;
  width: 44rpx;
  height: 44rpx;
}


.tab-choose {
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
}
.tab-choose >ui-list:first-child {
  flex: 1;
}