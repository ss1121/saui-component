.flex-row-between-center{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  align-content: center;
}
.article-title {
  color: #333;
  font-size: 34rpx;
  font-weight: bold;
}
.padding-normal {
  padding: 30rpx;
}
.mb-20-r {
  margin-bottom: 20rpx;
}
.item-li {
  width: 100%;
  height: 460rpx;
  border-radius: 8rpx;
  background: #2773F5;
  position: relative;
  transition: all 0.5s;
  margin-bottom: 20rpx;
}

.item-li .item-title {
  font-size: 30rpx;
  color: #fff;
  padding: 30rpx;
}

.item-li:active {
  transform: scale(1.1,1.1);
}

.btn-primary {
  background: #2773f5;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
}

.popups-wrap {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0,0,0,0.7);
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
}

.popups-wrap .item-pic {
  width: 530rpx;
  height: 530rpx!important;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background: #fff;  
}
